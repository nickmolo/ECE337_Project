module rowcounter
	(
	input wire clk,
	input wire n_rst,
	input wire s_rst,
	input wire enable,
	input wire pixel_clk,
	input reg [9:0] val,
	output reg [9:0] countout,
	output reg flag
	);
	  
	flex_counter #(10) row(
		.clk(clk),
		.n_rst(n_rst),
		.s_rst(s_rst),
		.count_enable(pixel_clk && enable),
		.rollover_val(val),
		.count_out(countout),
		.rollover_flag(flag)
	);

endmodule